{
  "name": "bundler",
  "version": "1.0.0",
  "description": "An open source implementation of a bundling server that accepts DataItem entries (according to ANS104), bundles many DataItem entries together and sends them as a bundle to the Arweave network.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist; tsc",
    "dev": "TS_NODE_FILES=true node --experimental-specifier-resolution=node --max-old-space-size=4096 --loader ts-node/esm.mjs src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettify": "prettier --write ."
  },
  "keywords": [
    "arweave",
    "bundlr"
  ],
  "author": "abhavk",
  "license": "ISC",
  "devDependencies": {
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.5.9",
    "@types/node": "^13.13.4",
    "arbundles": "^0.6.13",
    "arweave": "^1.10.23",
    "aws-sdk": "^2.1194.0",
    "express": "^4.17.2",
    "toad-scheduler": "^1.6.0",
    "winston": "^3.8.1"
  },
  "overrides": {
    "avsc": "^5.7.4"
  }
}
