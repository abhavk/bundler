{
  "name": "bundler",
  "version": "1.0.0",
  "description": "An open source implementation of a bundling server that accepts DataItem entries (according to ANS104), bundles many DataItem entries together and sends them as a bundle to the Arweave network.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf ./dist; tsc",
    "dev": "TS_NODE_FILES=true node --experimental-specifier-resolution=node --max-old-space-size=4096 --loader ts-node/esm.mjs src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettify": "prettier --write ."
  },
  "keywords": [
    "arweave",
    "bundlr"
  ],
  "author": "abhavk",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.7.17",
    "arbundles": "^0.6.21",
    "arweave": "^1.11.6",
    "aws-sdk": "^2.1194.0",
    "express": "^4.18.1",
    "toad-scheduler": "^1.6.1",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  },
  "overrides": {
    "avsc": "^5.7.4"
  }
}
